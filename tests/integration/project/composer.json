{
  "name": "vardot/composer-optimizer-test",
  "repositories": [
    { "url": "../package1", "type": "path" },
    { "url": "../package2", "type": "path" },
    { "url": "../package3", "type": "path" }
  ],
  "require": {
    "vendor/package1": "1.x-dev",
    "vendor/package2": "1.x-dev",
    "vendor/package3": "1.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Vardot\\ComposerOptimizer\\": "../../../src/",
      "Vardot\\Test\\": "src/"
    }
  },
  "config": {
    "vardot/composer-optimizer": {
      "clear": {
        "*": ["!tests"],
        "vendor/package1": ["other"],
        "vendor/package2": ["*"]
      },
      "debug": true
    }
  },
  "scripts": {
    "post-install-cmd": "Vardot\\Test\\Integration::run"
  }
}
