{
  "name": "vardot/composer-optimizer",
  "type": "composer-plugin",
  "description": "Composer plugin for removing development files.",
  "homepage": "https://github.com/Vardot/composer-optimizer",
  "license": "MIT",
  "authors": [
    {
      "role": "lead",
      "name": "Emircan ERKUL",
      "email": "e.erkul@vardot.com"
    },
    {
      "role": "lead",
      "name": "Kamil Samigullin",
      "email": "kamil@samigullin.info"
    }
  ],
  "autoload": {
    "psr-4": {
      "Vardot\\ComposerOptimizer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vardot\\ComposerOptimizer\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "8.2"
    }
  },
  "extra": {
    "class": "Vardot\\ComposerOptimizer\\Plugin",
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "require": {
    "php": "^8.1",
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "ext-yaml": "*",
    "composer/composer": "^2.6",
    "phpunit/phpunit": "^10.5"
  },
  "support": {
    "issues": "https://github.com/Vardot/composer-optimizer/issues"
  }
}
